<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VK_Images.Styles">
    <Style x:Key="EdgyButton" TargetType="Button">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="Red"></Setter>
            <Setter Property="BorderThickness" Value="10"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Padding" Value="20"></Setter>
            <Setter Property="MinWidth" Value="500"></Setter>
            <Setter Property="Background" Value="#1e1f21"></Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>